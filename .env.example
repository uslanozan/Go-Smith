# MySQL Connection String
DB_DSN=user:pass@tcp(127.0.0.1:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local
# Auto Migration for GORM
DB_AUTO_MIGRATE=false

# URL for the Ollama API (Default port is 11434)
OLLAMA_URL=http://localhost:11434/api/chat
# Recommended: qwen2.5:3b-instruct or llama3.2:3b-instruct-q4_K_M
OLLAMA_MODEL=qwen2.5:3b-instruct

# Endpoints where the main Go-Smith orchestrator is running.
ORCHESTRATOR_TOOLS_URL=http://localhost:8080/tools
ORCHESTRATOR_RUN_TASK_URL=http://localhost:8080/run_task

# Port for the demo backend/gateway to listen on.
GATEWAY_LISTEN_ADDR=:8000
# API Keys used for seeding the database (mock_db.go)
API_KEY_OZAN=api-secret-123
API_KEY_TEST=api-secret-super

# Timeout for internal HTTP requests between Gateway and Agents/Orchestrator
HTTP_CLIENT_TIMEOUT_SECONDS=60

# Optional: Configuration for google_calendar_agent
GMAIL_ADDRESS="your-mail-address@gmail.com"